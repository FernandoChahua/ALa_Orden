@model IEnumerable<Entity.Usuario>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Usuarios</h2>

<p>
    @Html.ActionLink("Nuevo Usuario", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Apodo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Contrasena)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Apodo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contrasena)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.ActionLink("Tarjetas", "Tarjetas", new { id = item.IdUsuario }) |
                @Html.ActionLink("Pedidos", "Pedidos", new { id = item.IdUsuario })
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.IdUsuario }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.IdUsuario })
            </td>
        </tr>
    }
</table>